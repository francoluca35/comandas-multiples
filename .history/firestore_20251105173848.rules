rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura a todos (sin autenticación)
    // ⚠️ ADVERTENCIA: Estas reglas permiten acceso sin autenticación
    // Para producción, deberías usar Firebase Authentication
    match /restaurantes/{restauranteId}/historialEmpleados/{document} {
      allow read, write: if true;
    }
    
    // Permitir acceso a otras colecciones (ajusta según necesites)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

